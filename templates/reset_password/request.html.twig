{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="jumbotron mon-jumbotron text-center mb-4">
        <h1>Réinitialisation du mot de passe</h1>
    </div>

    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container">

        {{ form_start(requestForm) }}
        <div class="mb-2">
                Entrez votre adresse email
        </div>
        
        {{ form_widget(requestForm.email) }}
        

        <button class="btn btn-primary mt-4">Envoyer l'email de réinitialisation du mot de passe</button>
        {{ form_end(requestForm) }}

    </div>

{% endblock %}