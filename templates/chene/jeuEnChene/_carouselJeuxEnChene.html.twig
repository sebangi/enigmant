<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {% for jeuEnChene in jeux_en_chene  %}
            <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" 
                {% if loop.index0 == 0 %}class="active"{% endif %}>
            </li>
        {% endfor %}            
    </ol>

    <div class="carousel-inner">
        {% for jeuEnChene in jeux_en_chene  %}                
            <div class="carousel-item {% if loop.index0 == 0 %}active{% endif %}">                
                {% if jeuEnChene.imageName %}
                    <img class="d-block w-100" src="{{ vich_uploader_asset(jeuEnChene, 'imageFile') }}" style="width:auto; height:400px;"> 
                {% else %}
                    <img class="d-block w-100" src="{{ '/images/jeuEnChene/vide.jpg' }}" style="width:auto; height:400px;">
                 {% endif%}
            </div>
        {% endfor %}
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
