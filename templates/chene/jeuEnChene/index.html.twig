{% extends "base.html.twig" %}

{% block title 'Jeux en chêne' %}

    {% block body %}
        <div class="jumbotron">
            <div class="container">
                {{ form_start(form) }}
                <div class="form-row align-items-end">
                    <div class="col">
                        {{ form_row(form.maxPrix) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.minDifficulteRaisonnement) }}
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <button class="btn btn-primary">Rechercher</button>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="container mt-4">
            <h1>Voir tous les jeux en chêne</h1>

            <div class="row">
                {% for jeu_en_chene in jeux_en_chene  %}
                    <div class="col-md-4">
                        {%  include 'chene/jeuEnChene/_jeuEnChene.html.twig' %}
                    </div>
                {% endfor %}
            </div>

            {# display navigation #}
            <div class="pagination">
                {{ knp_pagination_render(jeux_en_chene) }}
            </div>
        </div>
    {% endblock body %}
