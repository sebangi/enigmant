{% extends "base.html.twig" %}

{% block title  %} 
    {{ jeu_en_chene.intitule }}
{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    {% if jeu_en_chene.badgeImageName %}
                        <img src="{{ vich_uploader_asset(jeu_en_chene, 'badgeImageFile') }}" class="card-img-top" style="width:100%; height:500px;"> 
                    {% else %}
                        <img src="{{ '/images/badges/vide.png' }}" class="card-img-top" style="width:100%; height:230px;"> 
                    {% endif%}
                </div>
                <div class="col-md-4">
                    <h1>{{ jeu_en_chene.intitule }}</h1>
                    <h2>Temps de location : {{ jeu_en_chene.getTempsLocationString() }}</h2>
                    <div class="text-primary" style="font-weight:bold; font-size:2rem;">
                        {{ jeu_en_chene.getPrixFormate() }}
                    </div>
                    <a href="#" class="btn btn-primary">Réserver</a>
                </div>
            </div>
        </div>
    </div>


    <div class="container mt-4">
        <p>{{ jeu_en_chene.commentaire | nl2br }}</p>

        <div class="row">
            <div class="col-md-7">
                <table class="table table-striped">
                    <tr>
                        <td>Difficulté d'observation</td>
                        <td>{{ jeu_en_chene.difficulteObservation }} / 10</td>
                    </tr>
                    <tr>
                        <td>Difficulté de raisonnement</td>
                        <td>{{ jeu_en_chene.difficulteRaisonnement }} / 10</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-5">
                <h4>Babioles utilisées pour sa construction</h4>
                <ul class="list-group">
                    {% for babiole in jeu_en_chene.babioles  %}
                        <li class="list-group-item">{{ babiole.nom }}</li>  
                    {% endfor %}

                </ul>


            </div>
        </div>
    {% endblock body %}

