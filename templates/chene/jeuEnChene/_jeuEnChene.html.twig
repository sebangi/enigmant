{#{% cache 'jeuEnChene' ~ jeuEnChene.id  jeuEnChene.majDate.timestamp|default(2019) %}#}
<div class="card mb-4 rounded_card">
    {% if jeuEnChene.imageName %}
        <img class="card-img-top rounded_card" src="{{ vich_uploader_asset(jeuEnChene, 'imageFile') | imagine_filter("my_thumb") }}" > 
    {% else %}
        <img class="card-img-top rounded_card" src="{{ asset('images/jeuEnChene/vide.jpg') | imagine_filter("my_thumb") }}" > 
    {% endif%}
    
    <div class="card-body">
    
        <h5 class="card-title">
            <a href="{{ path("jeuEnChene.show", { slug: jeuEnChene.slug, id: jeuEnChene.id }) }}">
                {{ jeuEnChene.nom }}
            </a>
        </h5>
        <p class="card-text">Disponible : {{ jeuEnChene.disponible }}</p>    
        <p class="card-text">Durée de location : {{ jeuEnChene.getTempsLocationString }}</p>    
        <p class="card-text">{{ jeuEnChene.difficulteObservation }} {{ jeuEnChene.difficulteRaisonnement }}</p>    
        <p class="card-text">{{ jeuEnChene.description|nl2br(false) }}</p>    
                
        <p class="card-text">
            Babioles utilisées : 
            {% for babiole in jeuEnChene.babioles  %}
                {{ babiole.nom }} - 
            {% endfor %}
        </p> 
        <div class="text-primary" style="font-size:2rem; font-weight:bold;">
            Prix : {{ jeuEnChene.prixFormate }}
        </div>
    </div>
</div>
{#{% endcache %}#}