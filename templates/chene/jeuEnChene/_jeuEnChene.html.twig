{% cache 'jeu_en_chene' ~ jeu_en_chene.id  jeu_en_chene.majDate.timestamp|default(2019) %}
<div class="card mb-4">
    {% if jeu_en_chene.badgeImageName %}
        <img src="{{ vich_uploader_asset(jeu_en_chene, 'badgeImageFile') }}" class="card-img-top" style="width:100%; height:230px;"> 
    {% else %}
        <img src="{{ '/images/badges/vide.png' }}" class="card-img-top" style="width:100%; height:230px;"> 
    {% endif%}

    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path("jeuEnChene.show", { slug: jeu_en_chene.slug, id: jeu_en_chene.id }) }}" class="className">
                {{ jeu_en_chene.intitule }}
            </a>
        </h5>
        <p class="card-text">Disponible : {{ jeu_en_chene.disponible }}</p>    
        <p class="card-text">Dur√©e de location : {{ jeu_en_chene.getTempsLocationString }}</p>    
        <p class="card-text">{{ jeu_en_chene.difficulteObservation }} {{ jeu_en_chene.difficulteRaisonnement }}</p>    
        <p class="card-text">{{ jeu_en_chene.commentaire|nl2br(false) }}</p>    
        <p class="card-text">
            Babioles : 
            {% for babiole in jeu_en_chene.babioles  %}
                {{ babiole.nom }} -
            {% endfor %}
            {{ jeu_en_chene.commentaire }}        
        </p>    
        <div class="text-primary" style="font-size:2rem; font-weight:bold;">
            Prix : {{ jeu_en_chene.prixFormate }}
        </div>
    </div>
</div>
{% endcache %}