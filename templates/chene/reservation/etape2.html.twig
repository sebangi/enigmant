{% extends "chene/baseChene.html.twig" %}

{% block body %}
    <div class="jumbotron mon-jumbotron">
        <div class="container">
            <h1 class="text-center">Location du Jeu en Chêne {{ jeu.nom }}</h1>
        </div>
    </div>

    {{ include('outils/_flash.html.twig') }}  

    {{ include('chene/reservation/_progressBar.html.twig', { etape : "2" }) }}

    <div class="container mt-4">
        <h5 class="font-weight-bold text-center mb-3">
            Veuillez renseigner vos préférences pour le retrait
        </h5>

        <div class="card mb-4 border-dark">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0 mt-0">Date de retrait</h5>
            </div>
            <div class="card-body  p-3">
                <div class="container">
                    <div class="row">
                        <h6 class="col-md-9 text-justify mb-0  border-right border-dark">
                            <ul class="mb-0">
                                <li class="mb-2">
                                    Êtes-vous prêt à retirer le Jeu en Chêne <b>dans les sept prochains jours</b> ?
                                </li>
                            </ul>
                        </h6>
                        <div class="col-md-3 justify-content-center align-self-center">    
                            <div class="custom-control-lg custom-control custom-checkbox">
                                <input class="custom-control-input" id="checkbox-large2" type="checkbox" name='checkboxValidation'/>
                                <label class="custom-control-label" for="checkbox-large2">
                                    <h5>Oui</h5>
                                </label>
                            </div>
                        </div> 
                    </div>        
                </div>                    
            </div>
        </div>


        <div class="text-center">
            <button id="enable-on-two" disabled name='next2' href="{{ path('chene.location', { slug: jeu.slug, id: jeu.id, etape:2 }) }}" class="text-center btn btn-success mt-2">Louer le Jeu en Chêne {{ jeu.nom }}</button>
        </div> 

    </div>


{% endblock %}