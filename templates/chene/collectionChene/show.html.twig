{% extends "chene/baseChene.html.twig" %}

{% block body %}
    <div class="jumbotron mon-jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-7 d-flex align-items-center">
                    {% if collectionChene.imageName %}
                        <img style="width:100%" src="{{ asset( vich_uploader_asset(collectionChene, 'imageFile')) }}" class="card-img-top" style="width:720px; height:auto;"> 
                    {% else %}
                        <img style="width:100%" src="{{ asset( 'images/collectionChene/vide.jpg') }}" class="card-img-top" style="width:100%; height:230px;"> 
                    {% endif%}
                </div>
                <div class="col-md-5">
                    <h1 class ="text-info">{{ collectionChene.nom }}</h1>
                    <div class="mt-4">
                        <h5>{{ collectionChene.description | nl2br }}</h5>                    
                    </div>     
                    <div class="mt-4">
                        Nombre de jeux de la collection : {{ collectionChene.getJeuEnChenes() | length }}</p>
                    </div>     
                </div>
            </div>
        </div>
    </div>
    
    <div class="container mt-4 ">
        <div class="row mt-4">
            {% for jeuEnChene in jeux_en_chene  %}
                <div class="d-flex align-items-stretch col-md-4">
                    {%  include 'chene/jeuEnChene/_jeuEnChene.html.twig' %}
                </div>
            {% endfor %}
        </div>        
    </div>

{% endblock body %}

