{% extends "chene/baseChene.html.twig" %}

{% block body %}
    <div class="jumbotron mon-jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{ form_row(form.maxValeur) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-4">
        <h1>Voir toutes les babioles</h1>

        <div class="row">
            {% for babiole in babioles  %}
                <div class="d-flex align-items-stretch col-md-4">
                    {%  include 'chene/babiole/_babiole.html.twig' %}
                </div>
            {% endfor %}
        </div>

        {# display navigation #}
        <div class="pagination">
            {{ knp_pagination_render(babioles) }}
        </div>
    </div>
{% endblock body %}
